{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["apps/backend/src/*"],
      "types": ["apps/backend/src/types/types.ts"]
    }
  },
  "references": [{ "path": "./apps/backend" }]
}
